import numpy as np
import matplotlib.pyplot as plt

path = "/afs/inf.ed.ac.uk/user/s17/s1793158/mlp3/gym_trading/envs"


def moving_average(a, n=3) :
    ret = np.cumsum(a, dtype=float)
    ret[n:] = ret[n:] - ret[:-n]
    return ret[n - 1:] / n





name=["RNN_Adam_10e4_tanh",
      "RNN_Adam_10e4_lrelu",
      "RNN_Adam_10e4_lrelu_100",
      "RNN_Adam_10e4_lrelu_2_24",
        "RNN_Adam_10e4_lrelu_2_100",
        "RNN_Adam_10e4_lrelu_3_24",
        "RNN_Adam_10e4_lrelu_3_100",
        "RNN_Adam_10e4_lrelu_1_100_reg",
        "RNN_Adam_10e4_lrelu_2_100_reg"]
  

plt.figure()

for i in range(len(name)):
    
   Train = np.loadtxt(path + "/saved_models/"+name[i] +"/sorts.txt")
   Train  = moving_average(Train, n=500)
   plt.plot(Train, label=name[i])
plt.legend()
plt.show()


plt.figure()

for i in range(len(name)):
    
   Test = np.loadtxt(path + "/saved_models/"+name[i] +"/test_sorts.txt")
   Test  = moving_average(Test, n=500)
   plt.plot(Test, label=name[i])
plt.legend()
plt.show()

